extends layout

block content
    div(class='form-container')
        h1 Register
        form(action="/users/register", method="post", class="user-form")            
            label(for="username", class="form-label") Email:
            input#username(type="email", name="username", class="form-control", required)
            label(for="password", class="form-label") Password:
            input#password(type="password", name="password", class="form-control", required)
            label(for="fistname", class="form-label") First Name:
            input#firstname(type="text", name="firstname", class="form-control", required)
            label(for="lastname", class="form-label") Last Name:
            input#lastname(type="text", name="lastname", class="form-control", required)
            button(type="submit" class="btn btn-primary") Register